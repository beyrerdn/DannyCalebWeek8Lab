<div class="container">
  <% if @cart.user %>
    <h1><%= @cart.user.email %>'s Cart</h1>
  <% else %>
    <h1>Visitor's Cart</h1>
  <% end %>

  <div class="col-xs-9">
    <%= render :partial => 'items/item', :collection => @items, :locals => {:cart => @cart} %>
  </div>

  <div class="col-xs-3 text-center">
    <h4>Total(<%= pluralize(@cart.number_of_items, "item") %>): $<%= cookies[:checkout_total] %></h4>

    <div>
      <%= form_tag charges_path do %>
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-description="Purchase cart"
                data-amount="<%= @amount %>"
                data-locale="auto"></script>
      <% end %>
    </div>
  </div>
