<div class="container">
  <h2>Thank you for your purchase! This is your receipt.</h2>

  <h4><%= @receipt.id %></h4>
  <p>Purchased on: <%= @receipt.created_at.strftime("%d %b. %Y") %></p>
  <p>Purchase total: <%= @receipt.checkout_total %></p>
  <%= render :partial => 'item', :collection => @receipt.items %>
</div>
